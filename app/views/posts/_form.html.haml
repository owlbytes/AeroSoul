.FormPage
  = form_for(@post) do |f|
    .container
      .five.columns.alpha
        %p
      .seven.columns.omega#LeForm
        .formtitle Contribute
        .row
          = f.text_field :title, :placeholder => "Title"  
        .row
          = f.text_field :address, :placeholder => "Address"
          .formtext (include street, city, and country)
        .row
          = f.text_area :description, :placeholder => "Description"  
        .row
          = f.text_field :tag_list, :placeholder => "Tags"  
          .formtext (seperate the tags with commas)
        .row
          = f.file_field :photo, :placeholder => "Photo"
        .row
          = f.submit "Submit"
