
.posts-show-general
  .posts-show-title
    %h2= @post.title 

  .posts-show-left
    = @post.description
    %br
    artist:
    = @post.artist
    %br
    medium: 
    = @post.medium
    %br
    Commissioned?
    = @post.commision
    %br
    = "Curation Score: #{@post.score}"
    %br
    = raw @post.tag_list.map { |t| link_to t, tag_path(t) }.join(', ')
    %br
    Address:
    = @post.address
    %br
    .posts-show-static-map
      = image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=15&markers=#{@post.address}" 
 
    
  
    .posts-show-share
      %span.st_facebook_large{displaytext: "Facebook"}
      %span.st_twitter_large{displaytext: "Tweet"}
      %span.st_pinterest_large{displaytext: "Pinterest"}
      %span.st_tumblr_large{displaytext: "Tumblr"}
      %span.st_reddit_large{displaytext: "Reddit"}
      %span.st_googleplus_large{displaytext: "Google +"}
      %span.st_email_large{displaytext: "Email"}

    .posts-show-voting
      - if current_user.present?
        = link_to image_tag('http://www.iconsdb.com/icons/preview/color/E92603/arrow-141-xxl.png', title: "Upvote"), vote_post_path(@post) + "?score=1", method: :put
        = link_to image_tag('http://www.iconsdb.com/icons/preview/color/E92603/arrow-204-xxl.png',title: "Downvote"), vote_post_path(@post) + "?score=-1", method: :put
        = link_to image_tag('http://www.iconsdb.com/icons/preview/color/E92603/star-xxl.png', title: "Favorite This Piece"), assign_favorite_post_post_path(@post), method: :put

    .posts-show-editing
      .editdestroy
        - if can? :edit, @post
          = link_to "edit", edit_post_path(@post)

        - if can? :destroy, @post
          = link_to "destroy", post_path(@post), :method => :delete

  .posts-show-right
    .posts-show-image
      = image_tag @post.photo


