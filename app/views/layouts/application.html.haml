!!!
%html{lang: "en"}
  %head
    %title AeroSoul
    = stylesheet_link_tag "application", :media => "all"
    = csrf_meta_tags
    %script{src:"https://maps.googleapis.com/maps/api/js?key=AIzaSyCmfrzXEicBQQ8TYMV6A7--tcZL2nyYIjE&sensor=false"}
    %script{src:"https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false&libraries=places"}

    %link{href: "http://fonts.googleapis.com/css?family=Fenix|Noto+Sans|Droid+Sans|Average+Sans|PT+Sans|Istok+Web|Roboto+Condensed|Roboto:400,300|Doppio+One|Varela+Round|Ruda|Carme|Titillium+Web|Maven+Pro|Vollkorn", rel: "stylesheet", type: "text/css"}/
    %meta{content: "width=device-width, user-scalable=no", name: "viewport"}/

    = javascript_include_tag "application"
    %link{href:"http://fonts.googleapis.com/css?family=Droid+Sans' rel='stylesheet' type='text/css"}

    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-51298840-2', 'aerosoul.herokuapp.com');
      ga('send', 'pageview');

    #Nav.container.sixteen.columns
      #AccessibilityLink
        = link_to "Go to main content", :anchor => "MainContent"
      .row
        #NavImage.sixteen.columns.alpha
          = link_to image_tag('/assets/AeroLogo.png'), root_url
          - flash.each do |first_name, msg|
            = content_tag :div, msg, :id => "flash_#{first_name}"
      .row
        #NavLinks.sixteen.columns.alpha
          - if user_signed_in?
            = link_to "Curate", posts_path
            = link_to "Discover", maps_path
            = link_to "Favorites", user_stars_path(current_user)
            = link_to "New Post", new_post_path
            = link_to "Profile", edit_user_registration_path
            = link_to "T & C", terms_path
            = link_to "About", about_index_path
            = link_to 'Logout',  destroy_user_session_path, method: :delete
            / = link_to "starred", star_post_path
            / = link_to "Favs", star_post_path
          - else
            = link_to "Curate", posts_path
            = link_to "Discover", maps_path
            = link_to "About", about_index_path
            = link_to "Terms of Service", terms_path
            = link_to "Log In", new_user_session_path
            = link_to "Sign Up", new_user_registration_path
          
          

      

  #MainContent
    = yield
    %footer
    %br
    %br
      .generalsearchbarsection
        .generalsearchbar
          = form_tag searches_path do
            / = label_tag(:query, "Search AeroSoul")
            = text_field_tag :query, "Search AeroSoul"
               
           


