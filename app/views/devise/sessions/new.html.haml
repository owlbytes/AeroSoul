/ Code for loggin in/starting a new devise session

.logingeneral
  .login
    .form
      %h2 Log In
      = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
        .text
          = f.label :email
        .box
          = f.email_field :email, :autofocus => true
        %br/
        .text
          = f.label :password
        .box
          = f.password_field :password
        %br/
        - if devise_mapping.rememberable?
          = f.check_box :remember_me
          = f.label :remember_me
        %br/
        %br/
        .button
          = f.submit "Sign In"
        %br/
        .links
          = link_to 'Forgot your password?', "/users/password/new"
        %br
          = link_to image_tag('google-logo.png'), "/users/auth/google_oauth2"
          = link_to image_tag('facebook-logo.png'), "/users/auth/facebook"
      
    / = render "devise/shared/links"

    

    
    / .links
    /   = link_to "Didn't receive confirmation email?", "/users/confirmation/new"
