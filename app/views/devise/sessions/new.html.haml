/ Code for loggin in/starting a new devise session
.container.sixteen.columns#LogInPage
  
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    = devise_error_messages!

    #LogInForm
      %h2 Log In

      = f.label :email
      = f.email_field :email, :autofocus => true
      %br/
      %br/
      = f.label :password
      = f.password_field :password
      %br/
      %br/
      - if devise_mapping.rememberable?
        = f.check_box :remember_me
        = f.label :remember_me
      %br/
      %br/

      = f.submit "Log In"
      %br/
      %br/

      = link_to 'New password?', "/users/password/new"

      = link_to image_tag('SM-Google-G.png'), "/users/auth/google_oauth2"
      = link_to image_tag('SM-Facebook-F.png'), "/users/auth/facebook"
