<!-- signup for website
-->
<div class="container sixteen columns" id="SignUpPage">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div id="LeForm">
      <h1>Sign Up</h1>
      
      <div class="field">
        <%= f.label :first_name %>
        <%= f.text_field :first_name %>
      </div>
   
      <div class="field">
        <%= f.label :last_name %>
        <%= f.text_field :last_name %>
      </div>

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email%>
      </div>
      
      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password %>

      </div class="field" id="why">
        <div id="why"><%= f.label :password_confirmation %></div>
        <div id="why"><%= f.password_field :password_confirmation %></div>
      <div>

      </div>
  

      
      <br/>
      <br/>
      <div id="SubmitButton">
        <p>By registering with AeroSoul you are agreeing to our: </p>
        <%= link_to "Terms of Service", terms_path %>
        <br/>
        <br/>
        <%= f.submit "Sign Up" %>
        <br/>
        <br/>
      </div>
      <div id="SMImages">
        <%= link_to "Didn't receive confirmation email?", "/users/confirmation/new" %>
        <br/>
        <%= link_to image_tag('Google.png'), "/users/auth/google_oauth2" %>
        <%= link_to image_tag('Facebook.png'), "/users/auth/facebook" %>
      </div>
    </div>
  <% end %>
</div>
